<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 定义圆角矩形 -->
    <corners android:radius="4dip" />
    <!-- 设置四周内边距 -->
    <padding
        android:bottom="8dip"
        android:left="8dip"
        android:right="8dip"
        android:top="8dip" />
    <!-- 设置边框 -->
    <stroke
        android:width="2dip"
        android:color="#02457b" />
    <!-- 填充颜色 -->
    <solid android:color="#fff" />

</shape>